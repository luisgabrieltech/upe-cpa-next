// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(USER)
  functionalRoles FunctionalRole[]  // Múltiplos cargos funcionais
  resetToken    String?
  resetTokenExp DateTime?
  extraData     Json?     @default("{}")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  responses     Response[]
  createdForms  Form[]    @relation("FormCreator")
  certificates  Certificate[]
  active        Boolean   @default(true)
}

model Form {
  id          String     @id @default(cuid())
  title       String
  description String
  category    Category
  status      FormStatus @default(DRAFT)
  externalStatus ExternalStatus @default(HIDDEN)
  deadline    DateTime?
  estimatedTime String?
  generatesCertificate Boolean @default(false)
  certificateHours String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  createdBy   User       @relation("FormCreator", fields: [createdById], references: [id])
  createdById String
  questions   Question[]
  responses   Response[]
  certificates Certificate[]
  visibleToRoles   String[]  @default([])
  visibleToUserIds String[]  @default([])
}

model Question {
  id          String   @id @default(cuid())
  text        String
  type        QuestionType
  required    Boolean  @default(false)
  options     String[]
  rows        String[]
  columns     String[]
  order       Int
  conditional Json?
  form        Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  formId      String
  responses   Response[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Response {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  form       Form     @relation(fields: [formId], references: [id])
  formId     String
  question   Question @relation(fields: [questionId], references: [id])
  questionId String
  value      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, formId, questionId])
}

model Certificate {
  id             String         @id @default(cuid())
  validationCode String         @unique
  userId         String
  formId         String
  issuedAt       DateTime       @default(now())
  hash           String
  metadata       Json?          @default("{}")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  form           Form           @relation(fields: [formId], references: [id], onDelete: Cascade)
  validationLogs ValidationLog[]
}

model ValidationLog {
  id            String      @id @default(cuid())
  certificateId String
  validatedAt   DateTime    @default(now())
  ipAddress     String?
  userAgent     String?
  createdAt     DateTime    @default(now())
  
  certificate   Certificate @relation(fields: [certificateId], references: [id], onDelete: Cascade)
}

enum Role {
  ADMIN
  CSA   // Comissão Setorial de Avaliação - gerencia formulários
  USER
}

enum FunctionalRole {
  DOCENTE
  DISCENTE
  EGRESSO
  TECNICO_UNIDADES_ENSINO
  TECNICO_COMPLEXO_HOSPITALAR
}

enum FormStatus {
  DRAFT
  ACTIVE
  CLOSED
  FROZEN
}

enum Category {
  DOCENTES
  DISCENTES
  EGRESSOS
  TECNICOS_UNIDADES
  TECNICOS_COMPLEXO
}

enum QuestionType {
  MULTIPLE_CHOICE
  CHECKBOX
  TEXT
  SCALE
  GRID
  DROPDOWN
  SECTION
}

enum ExternalStatus {
  HIDDEN      // Formulário oculto
  AVAILABLE   // Disponível para responder
  FROZEN      // Congelado (não pode mais responder)
  SCHEDULED   // Agendado para ficar disponível
} 